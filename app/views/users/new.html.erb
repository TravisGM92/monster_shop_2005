<h1 align= "center">Register User</h1>
<center>

 <%= form_with model: @new_user, url: new_user_url do |f| %>
    <%= label_tag :name %>
    <%= f.text_field :name %>

    <%= label_tag :address %>
    <%= f.text_field :address %>

    <%= label_tag :city %>
    <%= f.text_field :city %>

    <%= label_tag :state %>
    <%= f.text_field :state %>

    <%= label_tag :zip %>
    <%= f.text_field :zip %>

    <%= label_tag :email %>
    <%= f.text_field :email %>

    <%= label_tag :password %>
    <%= f.text_field :password %>

    <%= label_tag :password_confirmation %>
    <%= f.text_field :password_confirmation %>

    <%= submit_tag 'Register New User' %>
  <% end %> 
   
</center>