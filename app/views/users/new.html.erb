<h1 align= "center">Register New User</h1>
<center>

<%= form_tag "/users" do %>

<%= label_tag(:name, "Name") %> <br>
<%= text_field_tag(:name) %> <br>

<%= label_tag(:address, "Address") %> <br>
<%= text_field_tag(:address) %> <br>

<%= label_tag(:city, "City") %> <br>
<%= text_field_tag(:city) %> <br>

<%= label_tag(:state, "State") %> <br>
<%= text_field_tag(:state) %> <br>

<%= label_tag(:zip, "Zip") %> <br>
<%= text_field_tag(:zip) %> <br>

<%= label_tag(:email, "Email") %> <br>
<%= text_field_tag(:email) %> <br>

<%= label_tag(:password, "Password") %> <br>
<%= text_field_tag(:password) %> <br>

<%= label_tag(:password_confirmation, "Password Confirmation") %> <br>
<%= text_field_tag(:password_confirmation) %> <br>

<%= submit_tag "Register New User" %>

<% end %>


</center>
